{
  "name": "node-react",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && npm start",
    "server": "node server.js",
    "start": "concurrently --kill-others-on-fail \"node server\" \"npm run client\"",
    "dev": "concurrently --kill-others-on-fail \"nodemon server.js\" \"npm run client\""
  },
  "dependencies": {
    "express": "^4.16.2",
    "concurrently": "^3.5.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "nodemon": "^1.19.1"
  }
}
